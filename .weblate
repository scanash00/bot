[files]
# Path to the translation files
file_filter = weblate/locales/<lang>/LC_MESSAGES/messages.po
# Path to the template file
template = weblate/locales/messages.pot

# File format
format = po

# Location of the source code
base = .

# Language code style
language_regex = ^[a-z]{2}(_[A-Z]{2})?$

# Source language
source_language = en

[settings]
# Enable fuzzy matching
fuzzy_matching = True

# Enable suggestions
suggestions = True

# Enable translation memory
translation_memory = True

[component]
# Component name
name = Aethel
# Component slug
slug = aethel
# Component category
category = Discord Bots
# Version control system
vcs = git
# Repository URL
repo = https://github.com/aethel-labs/aethel.git
# File format
template = weblate/locales/messages.pot
file_format = po
new_base = weblate/locales/messages.pot
filemask = weblate/locales/*/LC_MESSAGES/messages.po
edit_template = 1
language_regex = ^[a-z]{2}(_[A-Z]{2})?$
allow_translation_propagation = 1
push = https://github.com/aethel-labs/aethel.git
push_branch = main
merge_style = rebase
commit_message = Translated using Weblate (%(language_name)s)

[translation]
# Enable translation memory
translation_memory = True
# Enable suggestions
suggestions = True
# Enable checks
enable_suggestions = True
